<%= form_tag '/webms', multipart: true do %>
<div class="row align-justify">
  <div class="medium-6 columns">
    <select id="folder_name" name="folder_name">
      <% @webm_folders.each do |folder| -%>
          <option value="<%= folder %>"><%= folder.slice(0,1).capitalize + folder.slice(1..-1) %></option>
      <% end -%>
    </select>
  </div>
  <div class="medium-6 columns">
    <input type="submit" value="Go" class="button">
  </div>
</div>
<% end %>

<div class="row" data-equalizer data-equalize-on="medium">
  <% @webms.each do |webm| -%>
    <div class="medium-4 columns">
      <div class="" data-equalizer-watch>
        <a href="<%= "webms/#{@folder}/original/#{webm}" %>">
          <img class="thumbnail" src="<%= "webms/#{@folder}/thumbs/#{webm.sub! '.webm', '.jpg'}" %>" height="100">
        </a>
      </div>
    </div>
  <% end -%>
</div>
